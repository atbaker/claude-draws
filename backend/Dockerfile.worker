FROM python:3.13-slim

# Install Node.js and npm, plus Playwright system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install uv for Python package management
COPY --from=ghcr.io/astral-sh/uv:latest /uv /uvx /bin/

# Set working directory to backend
WORKDIR /app/backend

# Copy backend code (needed for editable install)
COPY backend/ .

# Install Python dependencies
RUN uv sync --frozen

# Generate BAML client (only `baml_src` is in git)
RUN uv run baml-cli generate

# Install gallery dependencies (needed for workflow activities)
WORKDIR /app/gallery
COPY gallery/package*.json ./
RUN npm install

# Back to backend directory
WORKDIR /app/backend

# Default command (can be overridden in docker-compose)
CMD ["uv", "run", "python", "-m", "worker.main"]
