# Chrome DevTools Protocol
# Get this URL from http://localhost:9222/json/version (webSocketDebuggerUrl of the browser target)
CHROME_CDP_URL=ws://127.0.0.1:9222/devtools/browser/your-browser-id-here

# Claude for Chrome Extension (from Chrome Web Store URL)
CLAUDE_EXTENSION_ID=

# Anthropic API (BAML)
ANTHROPIC_API_KEY=

# Cloudflare R2 Configuration
# Get these from: https://dash.cloudflare.com/
R2_ACCOUNT_ID=your_account_id_here
R2_ACCESS_KEY_ID=your_access_key_id_here
R2_SECRET_ACCESS_KEY=your_secret_access_key_here
R2_BUCKET_NAME=claudedraws-dev
R2_PUBLIC_URL=https://r2.claudedraws.com

# Cloudflare Workers & D1 (for deployment and submissions database)
# Note: These credentials are also used by the sleep monitor script (scripts/sleep_monitor.ps1)
CLOUDFLARE_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_API_TOKEN=your_api_token_here
D1_DATABASE_ID=your_d1_database_id_here

# Resend (for email notifications)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL="Claude Draws <noreply@claudedraws.com>"
ADMIN_NOTIFICATION_EMAIL=admin@example.com

# Temporal (for workflow orchestration)
TEMPORAL_HOST=localhost:7233

# OBS WebSocket Configuration (for livestream scene control)
# Enable WebSocket server in OBS: Tools â†’ WebSocket Server Settings
# Default port is 4444
OBS_WEBSOCKET_URL=ws://host.docker.internal:4444
OBS_WEBSOCKET_PASSWORD=your_obs_password_here
OBS_MAIN_SCENE="Main Scene"
OBS_SCREENSAVER_SCENE=Screensaver
OBS_COUNTDOWN_TEXT_SOURCE=CountdownTimer
